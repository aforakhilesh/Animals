{%- macro Behaviour(diet,animal_diet,plant_diet,predators,com_channels,behaviour,reproduction,independence_avg,child_avg,gest_avg,foraging_behaviour,anti_predator) -%}
{{'\n==ప్రవర్తన==\n'}}

{%- if diet != "NaN" -%}
    {{common_name}} {{diet}} జీవనాన్ని గడుపుతాయి. 
{%- endif -%}

{%- if behaviour != "NaN" -%}
    ఇవి {{behaviour}} జంతువులు.{{" "}}
{%- endif -%}

{%- if animal_diet != "NaN" -%}
    {{common_name}} {{animal_diet}}ను తమ ప్రధాన ఆహరంగా భావిస్తాయి.{{" "}}
{%- endif -%}

{%- if plant_diet != "NaN" -%}
    {{common_name}} {{plant_diet}} కూడా తింటాయి.{{" "}}
{%- endif -%}

{%- if predators != "NaN" -%}
వీటికి సహజ ప్రెడేటర్స్:
{% for values in predators %}
* {{values}}
{% endfor %}
{%- endif -%}

{%- if anti_predator != "NaN" -%}
    {{common_name}} ప్రెడేటర్స్ నుంచి కాపడుకోడానికి {{anti_predator}}వంటి పరిణామాత్మకమైన అనుసరణలను చూపిస్తాయి.{{" "}}
{%- endif -%}

{%- if "Year-round breeding" in reproduction -%}
ఇవి సంవత్సరం పొడవూ సంతానొత్పత్తి చెయ్యగలవు.{{" "}}
{%- endif -%}

{%- if "Oviparous" in reproduction -%}
{{common_name}} అండాశయ లక్షణములు గల జీవులు.{{" "}}
{%- endif -%}

{%- if "Gonochoric" in reproduction -%}
వీటిలో ఆడ, మగ రెండు కలవు.{{" "}}
{%- endif -%}

{%- if "Sexual" in reproduction -%}
ఈ జంతువులకి లైంగిక పునరుత్పత్తి చెయ్యగలిగే సామర్థ్యం ఉంది.{{" "}}
{%- endif -%}

{%- if "Seasonal breeding" in reproduction -%}
ఇవి సంవత్సరంలో నిర్దిష్ట సమయాల్లో మాత్రమే విజయవంతంగా జతకట్టకలవు.{{" "}}
{%- endif -%}

{%- if "Semelparous" in reproduction -%}
{{common_name}} తమ జీవితంలో కేవలం ఒక్కసారి సంతానోత్పత్తి చెయ్యగలవు.{{" "}}
{%- endif -%}

{%- if "Viviparous" in reproduction -%}
{{common_name}} పిండాశయ లక్షణములు గల జీవులు.{{" "}}
{%- endif -%}

{%- if "Asexual" in reproduction -%}
{{common_name}} అలైంగిక పునరుత్పత్తి చేస్తాయి.{{" "}}
{%- endif -%}

{%- if "Iteroparous" in reproduction -%}
ఇవి తమ జీవితంలో అనేక సార్లు సంతానోత్పత్తి చేయగలిగే సామర్ధ్యం ఉంది.{{" "}}
{%- endif -%}

{%- if foraging_behaviour != "NaN" -%}
ఇవి {{foraging_behaviour}} ద్వారా ఆహారాన్ని నిల్వ చేస్తాయి.{{" "}}
{%- endif -%}

{%- if com_channels != "NaN" -%}
ఈ జీవులు సంభాషించడానికి {{com_channels}} మార్గాలను వాడతాయి.{{" "}}
{%- endif -%}

{%- if child_avg != "NaN" -%}
{%- if child_avg > 1 -%}
ఇవి ఒకటే సారి {{child_avg|trim('.0')}} పిల్లలను పొదగగలవు.{{" "}}
{%- endif -%}
{%- if child_avg == 1 -%}
ఇవి ఒకటే సారి ఒక పిల్లను పొదగగలవు.{{" "}}
{%- endif -%}
{%- endif -%}

{%- if gest_avg != "NaN" -%}
{%- if gest_avg < 1440 -%}
{{common_name}} గర్భధారణ సమయం సుమారుగా {{gest_avg}} గంటలు ఉంటుంది.{{" "}}
{%- endif -%}
{%- if gest_avg >= 1440 -%}
{{common_name}} గర్భధారణ సమయం సుమారుగా {{(gest_avg/1440)|trim('.0')}} రోజులు ఉంటుంది.{{" "}}
{%- endif -%}
{%- endif -%}
{%- endmacro -%}

{%- macro preservation(lifespan_avg,iucn) -%}

{{'\n==పరిరక్షణ==\n'}}

{%- if lifespan_avg != "NaN" -%}
{{common_name}} సుమారుగా {{lifespan_avg}} సంవత్సరాలు బ్రతుకుతాయి.{{" "}}
{%- endif -%}
ఇంటర్నేషనల్ యూనియన్ ఫర్ కన్జర్వేషన్(IUCN)<ref name="IUCN">[https://www.iucnredlist.org/ IUCN]</ref>ఆఫ్ నేచర్ అనేది ప్రకృతి పరిరక్షణ, సహజ వనరుల వినియోగం రంగంలో పనిచేస్తున్న అంతర్జాతీయ సంస్థ.{{" "}}
{%- if iucn != "NaN" -%}
{{common_name}}ను IUCNలో {{iucn}}గా వర్గీకరించారు.{{" "}}
{%- endif -%}

{%- if iucn == "LT"  or iucn == "LC" -%}
అడవిలో ఈ జంతువు జాతి సంఖ్య ఇప్పటికీ చాలా ఎక్కువ ఉంది.{{" "}}
{%- endif -%}
{%- if iucn == "VU" -%}
ఈ జంతువులు జీవిస్తున్న పరిస్థితులు మెరుగుపడకపోతే అంతరించిపోవడానికి అవకాశం ఎక్కువగా ఉంది.{{" "}}
{%- endif -%}
{%- if iucn == "EX" -%}
ఈ జంతువులు భూమి నుంచి అంతరించిపోయాయి.{{" "}}
{%- endif -%}
{%- if iucn == "EW" -%}
ఈ జంతువులు అడవిలో కాకుండా కేవలం బందిఖానాలో  జీవిస్తున్నాయి.{{" "}}
{%- endif -%}
{%- if iucn == "CR" -%}
భూమి పైన ఈ జంతువుల సంఖ్య 50 కన్నా తక్కువ ఉన్నాయి.{{" "}}
{%- endif -%}
{%- if iucn == "NT" -%}
భవిష్యత్తులో వీటి సంఖ్య ప్రమాదంలో పడవొచ్చు.{{" "}}
{%- endif -%}
{%- endmacro -%}

